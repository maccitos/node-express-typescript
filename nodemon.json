{
    "restartable": "rs",
    "ignore": [".git", "node_modules/", "lib/", "coverage/"],
    "watch": ["src/**/*.ts", "app.ts"],
    "execMap": {
      "ts": "node -r ts-node/register"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,ts",
    "events": {
        "restart": "npm run lint"
    }
}